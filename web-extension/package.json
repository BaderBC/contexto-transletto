{
  "name": "contexto-translatto-web-extension",
  "version": "1.0.0",
  "scripts": {
    "code:lint": "eslint '**/**/*.{ts,tsx,svelte}'",
    "code:lint-fix": "eslint --fix",
    "code:validate": "svelte-check",
    "code:typecheck": "./node_modules/.bin/tsc --noEmit",
    "code:prettier": "prettier --write",
    "css:lint": "stylelint 'src/assets/**/**/*.css'",
    "css:lint-fix": "stylelint --fix",
    "app:chrome": "rimraf dist && cross-env BROWSER='chrome' NODE_ENV='production' rollup -c rollup.config.js",
    "app:chrome-dev": "cross-env BROWSER='chrome' rollup -c rollup.config.js --watch",
    "app:edge": "rimraf dist && cross-env BROWSER='edge' NODE_ENV='production' rollup -c rollup.config.js",
    "app:edge-dev": "cross-env BROWSER='edge' rollup -c rollup.config.js --watch",
    "app:firefox": "rimraf dist && cross-env BROWSER='firefox' NODE_ENV='production' rollup -c rollup.config.js",
    "app:firefox-dev": "cross-env BROWSER='firefox' rollup -c rollup.config.js --watch",
    "watch:firefox": "concurrently -n rollup,web-ext -c cyan,#FFFF00 \"pnpm app:firefox-dev\" \"(sleep 2 && web-ext run -s dist --keep-profile-changes)\"",
    "test:unit": "jest",
    "lint-staged": "lint-staged",
    "test:unit-update-snapshot": "jest --updateSnapshot"
  },
  "author": "Bart≈Çomiej Strama",
  "type": "module",
  "devDependencies": {
    "@babel/core": "^7.14.2",
    "@babel/preset-env": "^7.14.2",
    "@babel/preset-typescript": "^7.13.0",
    "@eslint/compat": "^1.0.3",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.4.0",
    "@optimize-lodash/rollup-plugin": "^4.0.4",
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/svelte": "^3.0.3",
    "@tsconfig/svelte": "^1.0.10",
    "@types/chrome": "0.0.139",
    "@types/firefox-webext-browser": "^120.0.3",
    "@types/jest": "^26.0.23",
    "@types/node": "^18.7.19",
    "@types/sinon": "^10.0.0",
    "@types/testing-library__jest-dom": "^5.9.5",
    "@types/webextension-polyfill": "^0.10.7",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^4.23.0",
    "autoprefixer": "^10.4.19",
    "babel-jest": "^26.6.3",
    "concurrently": "^8.2.2",
    "copy-webpack-plugin": "^8.1.1",
    "cross-env": "^7.0.3",
    "css-loader": "^5.2.4",
    "dotenv": "^16.4.5",
    "eslint": "^9.4.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-svelte3": "^3.2.0",
    "globals": "^15.4.0",
    "husky": "^8.0.1",
    "jest": "^26.6.3",
    "less": "^4.1.1",
    "lint-staged": "^13.0.3",
    "mini-css-extract-plugin": "^1.6.0",
    "postcss": "^8.4.38",
    "prettier": "^2.3.0",
    "prettier-plugin-svelte": "^2.3.0",
    "prettier-plugin-tailwindcss": "^0.6.4",
    "raw-loader": "^4.0.2",
    "rimraf": "^3.0.2",
    "rollup": "^4.18.0",
    "rollup-merge-config": "^0.0.12",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-css-only": "^4.5.2",
    "rollup-plugin-define": "^1.0.1",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-string": "^3.0.0",
    "rollup-plugin-svelte": "^7.2.2",
    "sinon": "^10.0.0",
    "svelte": "^3.59.2",
    "svelte-check": "^1.0.46",
    "svelte-jester": "^1.5.0",
    "svelte-loader": "^3.2.0",
    "svelte-preprocess": "^4.3.0",
    "svelte-preprocess-less": "^0.4.0",
    "tailwindcss": "^3.4.4",
    "ts-jest": "^26.5.6",
    "ts-loader": "^8.2.0",
    "tslib": "^2.0.1",
    "typescript": "^4.2.4",
    "typescript-eslint": "^7.13.0",
    "web-ext": "^7.11.0",
    "web-ext-types": "^3.2.1",
    "webpack": "^5.76.0",
    "webpack-cli": "^4.4.0",
    "whatwg-fetch": "^3.0.0"
  },
  "keywords": [
    "chrome extension",
    "microsoft edge extension",
    "firefox addon",
    "web extension",
    "typescript",
    "ts",
    "jest",
    "sinon"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/davidnguyen179/web-extension-svelte-boilerplate.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/davidnguyen179/web-extension-svelte-boilerplate/issues"
  },
  "homepage": "https://github.com/davidnguyen179/web-extension-svelte-boilerplate/blob/main/README.md",
  "funding": {
    "type": "individual",
    "url": "https://paypal.me/davidnguyen179"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,svelte}": [
      "npm run code:lint-fix",
      "npm run css:lint-fix",
      "npm run code:prettier"
    ]
  },
  "dependencies": {
    "bits-ui": "^0.21.10",
    "clsx": "^2.1.1",
    "cmdk-sv": "^0.0.17",
    "lucide-svelte": "^0.396.0",
    "svelte-radix": "^1.1.0",
    "tailwind-merge": "^2.3.0",
    "tailwind-variants": "^0.2.1",
    "webextension-polyfill": "^0.12.0"
  }
}
