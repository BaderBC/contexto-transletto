{
  "manifest_version": 2,
  "name": "Contexto transletto",
  "version": "0.1.5",
  "description": "Allows you tu easily translate sentence and save that translation in your anki app as a flashcard",
  "permissions": [
    "contextMenus",
    "tabs",
    "identity",
    "activeTab",
    "scripting",
    "storage",
    "http://localhost/*",
    "http://127.0.0.1/*",
    "http://contexto-transletto.bstrama.com/*",
    "https://www.googleapis.com/"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "contexto-transletto@bstrama.com"
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "images/logo/logo-128.png",
    "default_title": "Contexto Transletto",
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "images/logo/logo-128.png"
  }
}
